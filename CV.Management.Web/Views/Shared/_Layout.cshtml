<body>
    <div class="container">
        <nav class="navbar navbar-default navbar-static-top">
            <div class="container-fluid">
                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/"><img src="~/Content/Images/logo.png" alt="Amrop"></a>
                </div>

                <!-- Collect the nav links, forms, and other content for toggling -->
                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav">
                        <li class="dropdown navbar-first-element-in-dropdown">
                            <a href="#" class="dropdown-toggle dropdown-title" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Language <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a class="language-submenu-item" href="/cv/profile/en">EN</a></li>
                                <li><a class="language-submenu-item" href="/cv/profile/lv">LV</a></li>
                            </ul>
                        </li>
                        <li class="preview-link">
                            <div class="navbar-preview-container">
                                <img src="~/Content/Images/preview.png" />
                                <a>Preview</a>
                            </div>                        </li>
                        @if (User.IsInRole("Administrator"))
                        {
                            <li class="admin-link"><a href="/admin/overview">Admin</a></li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial", new CV.Management.Web.Models.LoginPartialViewModel
                            {
                                FullName = Model.Name
                            })
                </div><!-- /.navbar-collapse -->
            </div><!-- /.container-fluid -->
        </nav>
    </div>
    <div class="container">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Amrop. @Resources.RightsReserved <a href="@Resources.PrivacyLink">@Resources.Privacy</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)

</body>
</html>
