@model CV.Management.Web.Models.CompensationViewModel

<div class="row">

    @using (Html.BeginForm("Compensation", "Cv", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => Model.CurrentSalary, new { @class = "control-label" })
                    @Html.TextBoxFor(model => Model.CurrentSalary, new { @class = "form-control", @placeholder = @Resources.CurrentSalary })
                    @Html.ValidationMessageFor(model => Model.CurrentSalary)
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => Model.CurrentBonuses, new { @class = "control-label" })
                    @Html.TextBoxFor(model => Model.CurrentBonuses, new { @class = "form-control", @placeholder = @Resources.CurrentBonuses })
                    @Html.ValidationMessageFor(model => Model.CurrentBonuses)
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => Model.SalaryRequest, new { @class = "control-label" })
                    @Html.TextBoxFor(model => Model.SalaryRequest, new { @class = "form-control", @placeholder = @Resources.SalaryRequest })
                    @Html.ValidationMessageFor(model => Model.SalaryRequest)
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    @Html.LabelFor(model => Model.BonusRequest, new { @class = "control-label" })
                    @Html.TextBoxFor(model => Model.BonusRequest, new { @class = "form-control", @placeholder = @Resources.BonusRequest })
                    @Html.ValidationMessageFor(model => Model.BonusRequest)
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    @Html.LabelFor(model => Model.AdditionalBonuses, new { @class = "control-label" })
                    @Html.TextAreaFor(model => Model.AdditionalBonuses, new { @class = "form-control", @rows = 5, @placeholder = @Resources.AdditionalBonuses })
                    @Html.ValidationMessageFor(model => Model.AdditionalBonuses)
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group text-right">
                    <input type="submit" value="@Resources.Save" class="btn btn-primary float-right" />
                </div>
            </div>
        </div>
    }

</div>
