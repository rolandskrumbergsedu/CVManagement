@model CV.Management.Web.Models.AdditionalFilesViewModel

<div class="row">
    <div class="col-md-12">
        <h5 class="additional-files-label">Additional files</h5>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table">
            <tbody>

                @for (var i = 0; i < Model.Files.Count; i++)
                {
                    <tr>
                        @Html.HiddenFor(t => Model.Files[i].AdditionalFileId)
                        <td>@Model.Files[i].FileName <img class="remove-image pull-right" src="~/Content/Images/remove.png" /></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>