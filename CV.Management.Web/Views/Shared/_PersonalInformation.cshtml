@model CV.Management.Web.Models.PersonalInformationViewModel
<div class="row">

    @using (Html.BeginForm("PersonalInformation", "Cv", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="col-md-12">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-6">
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.FullName, new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", @placeholder = @Resources.FullName })
                        @Html.ValidationMessageFor(model => model.FullName)
                    </div>

                    @Html.LabelFor(model => model.LinkedInLink, new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.LinkedInLink, new { @class = "form-control", @placeholder = @Resources.LinkedInLink })
                        @Html.ValidationMessageFor(model => model.LinkedInLink)
                    </div>
                </div>

            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="form-group">
                    @Html.LabelFor(model => model.Address, new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @placeholder = @Resources.AddressPlaceholder })
                        @Html.ValidationMessageFor(model => model.Address)
                    </div>

                    @Html.LabelFor(model => model.Phone, new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-xs-4 phone-code-input-div">
                                @Html.TextBoxFor(model => model.PhoneCode, new { @class = "form-control", @placeholder = @Resources.PhoneCodePlaceholder })
                                @Html.ValidationMessageFor(model => model.PhoneCode)
                            </div>
                            <div class="col-xs-8 phone-input-div">
                                @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @placeholder = @Resources.PhonePlaceholder })
                                @Html.ValidationMessageFor(model => model.Phone)
                            </div>
                        </div>
                    </div>

                    @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = @Resources.Email })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>

                    @Html.LabelFor(model => model.OtherInformation, new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.OtherInformation, new { @class = "form-control", @placeholder = @Resources.OtherInformation })
                        @Html.ValidationMessageFor(model => model.OtherInformation)
                    </div>

                    @Html.LabelFor(model => model.Project, new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.TextBoxFor(model => model.Project, new { @class = "form-control", @placeholder = @Resources.Project })
                        @Html.ValidationMessageFor(model => model.Project)
                    </div>


                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group text-right">
                        <input id="save_personal" type="submit" value="@Resources.Save" class="btn btn-primary float-right" />
                    </div>
                </div>
            </div>
        </div>
    }
</div>

