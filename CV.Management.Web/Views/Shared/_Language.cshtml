@using CV.Management.Web.Models
@model CV.Management.Web.Models.LanguageViewModel

<div class="row">

    @using (Html.BeginForm("Language", "Home", FormMethod.Post))
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.AntiForgeryToken()

        <div class="col-md-3">
            <div class="form-group">
                <div class="row">
                    @Html.LabelFor(model => model.Language, new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.DropDownListFor(model => model.Language, new SelectList(Enum.GetValues(typeof(LanguageEnum))), "Language", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Language)
                    </div>
                </div>

            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <div class="row">
                    @Html.LabelFor(model => model.SpokenLevel, new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.DropDownListFor(model => model.SpokenLevel, new SelectList(Enum.GetValues(typeof(LevelEnum))), "Spoken level", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SpokenLevel)
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <div class="row">
                    @Html.LabelFor(model => model.WrittenLevel, new { @class = "control-label col-md-12" })
                    <div class="col-md-12">
                        @Html.DropDownListFor(model => model.WrittenLevel, new SelectList(Enum.GetValues(typeof(LevelEnum))), "Written level", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.WrittenLevel)
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-12 text-center">
            <img id="additional_courses_add" src="~/Content/Images/add.png" />
        </div>

        <div class="col-md-12">
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group text-right">
                        <input type="submit" value="Save" class="btn btn-primary float-right" />
                    </div>
                </div>
            </div>
        </div>
    }

</div>
