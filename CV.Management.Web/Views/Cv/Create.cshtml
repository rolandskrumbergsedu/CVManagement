@model CV.Management.Web.Models.CreateProfileViewModel
@{
    ViewBag.Title = "Create new user";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

@using (Html.BeginForm("Create", "CV", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="container edit-user-container">
        <div class="form-group row">
            @Html.LabelFor(m => m.FullName, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.SelectedLanguage, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-4">
                @Html.DropDownListFor(m => m.SelectedLanguage, Model.Languages, new { @class = "form-control" })
            </div>
        </div>

        <input class="btn btn-primary create-user-btn" type="submit" value="Create profile" />
    </div>

}