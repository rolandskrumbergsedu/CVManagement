@model CV.Management.Web.Models.EditUserViewModel
@{
    ViewBag.Title = "EditUser";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

@using (Html.BeginForm("EditUser", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.ProfileId)
    @Html.HiddenFor(m => m.UserId)

    <div class="container edit-user-container">
        <div class="form-group row">
            @Html.LabelFor(m => m.Name, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Surname, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.EmailConfirmed, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.EmailConfirmed, new { @class = "form-control", @readonly = "readonly" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.SelectedAdminResponse, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-4">
                @Html.DropDownListFor(m => m.SelectedAdminResponse, Model.AdminResponses, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.SelectedAdminResponse)
            </div>
        </div>


    </div>
    <input class="btn btn-primary edit-user-btn" type="submit" value="Update" />
}