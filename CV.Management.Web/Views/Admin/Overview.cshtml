@model CV.Management.Web.Models.AdminOverviewViewModel
@{
    ViewBag.Title = "Profiles";
    Layout = "_AdminLayout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Full name</th>
                        <th>Username</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>

                    @for (var i = 0; i < Model.Profiles.Count; i++)
                    {
                    <tr>
                        @Html.HiddenFor(t => Model.Profiles[i].ProfileId)
                        <td>@Model.Profiles[i].FullName</td>
                        <td>@Model.Profiles[i].Username</td>
                        <td>ENG: <span class="download_word_en"></span> <span class="download_ppt_en"></span> | LV: <span class="download_word_lv"></span> <span class="download_ppt_lv"></span></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>

